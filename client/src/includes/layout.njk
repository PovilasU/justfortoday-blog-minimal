    </head>
    <body>


        <header>
            <h1>{{ title }}</h1>
                <nav>
                <button id="nav-toggle" aria-label="Open navigation">☰</button>
                <div id="nav-menu">
                    <button id="nav-close" aria-label="Close navigation">✕</button>
                    <a href="/">Home</a>
                    <a href="/about/">About</a>
                    <a href="/reflection/">Reflection</a>
                    <a href="/gratitude/">Gratitude</a>
                    <a href="/media/">Media</a>
                    <a href="/login/">Login</a>
                    <a href="/signup/">Signup</a>
                    <a href="/todo/">To-Do</a>
                    <a href="/meditation/">Meditation</a>
                    <a href="/help/">Help</a>
                    <a href="/beforesleep/">Before Sleep</a>
                </div>
            </nav>
        </header>

        <main>
            {{ content | safe }}
        </main>

        <footer>
            <p>&copy; <script>
                    document.write(new Date().getFullYear())
                </script> Just for Today. All rights reserved.</p>
        </footer>

    </body>
    <script>
            const toggle = document.getElementById("nav-toggle");
            const closeBtn = document.getElementById("nav-close");
            const menu = document.getElementById("nav-menu");

        toggle.addEventListener("click", () => {
        if (menu.style.display === "flex") {
            menu.style.display = "none";
        } else {
            menu.style.display = "flex";
        }
        });


            closeBtn.addEventListener("click", () => {
            menu.style.display = "none";
            });

            document.querySelectorAll('#nav-menu a').forEach(link => {
            link.addEventListener('click', () => {
                if (window.innerWidth < 600) {
                menu.style.display = 'none';
                }
            });
            });
    </script>
</html>